<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddDelayAlarm"
        android:focusable="true"
        android:focusableInTouchMode="true" android:orientation="vertical">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/trainNumberInput"
            android:hint="P8007"

    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Waiting for train number..."
            android:ems="10"
            android:id="@+id/trainNumberInfo"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
    />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/timeAlarmInput"
        android:text="0800"/>
    <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:visibility="invisible"/>
    <Button
            android:text="@string/title_activity_add_delay_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createDelayAlarm" />
</LinearLayout>